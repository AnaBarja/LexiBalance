@page
@model LexiBalance.Pages.Clientes.CreateModel

@{
    ViewData["Title"] = "Insertar cliente";
}

<h1>Insertar cliente</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (LexiBalance.Pages.Clientes.CreateModel.clienteExiste)
            {
                <p style="color:#FF0000">
                    El cliente ya existe.
                </p>
            }
            <div class="form-group">
                <label asp-for="Cliente.Nombre" class="control-label"></label>
                <input asp-for="Cliente.Nombre" class="form-control" />
                <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.CP" class="control-label"></label>
                <input maxlength="5" minlength="5" type="number" asp-for="Cliente.CP" class="form-control" />
                <span asp-validation-for="Cliente.CP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Telefono" class="control-label"></label>
                <input minlength="9" type="number" asp-for="Cliente.Telefono" class="form-control" />
                <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Insertar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a clientes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
