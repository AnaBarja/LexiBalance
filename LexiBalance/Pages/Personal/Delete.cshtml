@page
@model LexiBalance.Pages.Personal.DeleteModel

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>

<h3>Estas seguro de que quieres borrar a este trabajador?</h3>
<div>
    <h4>Trabajador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.DNI)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.DNI)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.Telefono)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.Direccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.Direccion)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Trabajador.ID" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-page="Index">Volver a personal</a>
    </form>
</div>
