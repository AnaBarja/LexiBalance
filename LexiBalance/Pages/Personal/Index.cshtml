@page
@model LexiBalance.Pages.Personal.IndexModel

@{
    ViewData["Title"] = "Personal";
}
@if (User.Identity.Name.Equals("Gerente"))
{
    <p><img src="~/img/personal.png" /></p>
    <p>
        <a asp-page="Create">Insertar trabajador</a>
    </p>
    <table class="table" style="table-layout:fixed;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Trabajador[0].Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Trabajador[0].DNI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Trabajador[0].Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Trabajador[0].Direccion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Trabajador)
            {
                <tr>
                    <td style="word-wrap:break-word;">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DNI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td style="word-wrap:break-word;">
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Detalles</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    Response.Redirect("/Index");
}
