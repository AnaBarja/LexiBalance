@page
@model LexiBalance.Pages.Ventas.IndexModel

@{
    ViewData["Title"] = "Ventas";
}

<p><img src="~/img/ventaspagina.png" /></p>

<p>
    <a asp-page="Create">Insertar venta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venta[0].Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venta[0].Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venta[0].Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venta[0].Trabajador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venta[0].Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Venta)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trabajador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Detalles</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
